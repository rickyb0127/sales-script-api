{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "module": "commonjs",
    "lib": [ "es2015", "es2016", "es2017", "esnext", "esnext.asynciterable", "dom" ],
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "jsx": "preserve"
  },
  "files": ["src/@types/apiTypes.ts"],
  "include": ["src/**/*"],
  "exclude": [
    "test", "node_modules", "compiled",
  ]
}